# 환경변수 예시 파일
# 실제 사용 시 .env 파일로 복사하고 값을 수정하세요

# OpenAI API 키 (필수)
OPENAI_API_KEY=sk-your-actual-openai-api-key-here

# Docker 설정
DOCKER_HOST=unix:///var/run/docker.sock

# 서비스 포트
IMAGE_ANALYSIS_PORT=5000
PERFORMANCE_PREDICTION_PORT=5001

# AI 설정
AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=1000
AI_TIMEOUT=30

# 파일 분석 제한
MAX_FILES_TO_ANALYZE=15
MAX_FILE_SIZE_KB=5
MAX_TOTAL_FILES_SCAN=50

# 로깅
LOG_LEVEL=INFO
DEBUG=false
